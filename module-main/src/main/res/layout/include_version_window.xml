<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_5"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="新版本更新"
        android:textColor="@color/color_333333"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        tools:text="有新版本v2.1.4，建议更新" />

    <TextView
        android:id="@+id/version_content_ifo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:text="更新内容："
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        tools:text="更新日志：" />

    <TextView
        android:id="@+id/version_content_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        tools:text="1.杀杀杀杀杀杀杀杀杀" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e2e2e2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="不用了"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <View
            android:id="@+id/v_version_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e2e2e2" />

        <TextView
            android:id="@+id/version_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="更新"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
