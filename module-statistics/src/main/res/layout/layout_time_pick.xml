<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:minHeight="44dp"
        android:background="@color/white"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.constraintlayout.widget.Guideline>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guide_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="0dp">
        </net.lucode.hackware.magicindicator.MagicIndicator>


        <com.ruffian.library.widget.RTextView
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintWidth_default="wrap"
            android:singleLine="true"
            android:ellipsize="middle"
            android:drawableRight="@mipmap/pwtj_icon_riqi"
            android:drawablePadding="12dp"
            app:background_normal="@color/color_1959abff"
            android:paddingHorizontal="12dp"
            android:paddingVertical="7dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textColorHint="@color/color_999999"
            app:corner_radius="24dp"
            android:id="@+id/pick"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintLeft_toRightOf="@+id/guide_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </com.ruffian.library.widget.RTextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>